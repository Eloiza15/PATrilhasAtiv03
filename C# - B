using System;

namespace Exercicios
{ 
	class Program 
	{
		public static void Main()
		{
			
		 //Crie um programa que peça ao usuário para digitar dois números inteiros e exiba se o primeiro número é menor que o segundo número.
		  
		 Console.WriteLine ("Digite o primeiro número inteiro (vamos exibir se o primeiro número é menor que o segundo número): ");
		 int numUm = Convert.ToInt16 (Console.ReadLine());
		 
		 Console.WriteLine ("Digite o segundo número inteiro: ");
		 int numDois = Convert.ToInt16 (Console.ReadLine());
		 
		 if (numUm < numDois) 
		 {
		 	Console.WriteLine("O número {0} é menor que {1}" , numUm,numDois);
		 }
		 else
		 {
		 	Console.WriteLine("O número {0} não é menor que {1}", numUm,numDois);
		 }
		 
		 
		 Console.WriteLine("");
		 Console.Write("Pressione qualquer tecla para fechar..");
		 Console.ReadKey(true);
			
		}
	}
}
