using System;

namespace Exercicios
{ 
	class Program 
	{
		public static void Main()
		{
			
		 //Crie um programa que peça ao usuário para digitar dois números inteiros e exiba se eles são iguais.
		  
		 Console.WriteLine ("Digite o primeiro número inteiro (vamos exibir se ele e o segundo são iguais): ");
		 int numUm = Convert.ToInt16 (Console.ReadLine());
		 
		 Console.WriteLine ("Digite o segundo número inteiro: ");
		 int numDois = Convert.ToInt16 (Console.ReadLine());
		 
		 if (numUm == numDois) 
		 {
		 	Console.WriteLine("O dois números são iguais");
		 }
		 else
		 {
		 	Console.WriteLine("O dois números não são iguais");
		 }
		 
		 
		 Console.WriteLine("");
		 Console.Write("Pressione qualquer tecla para fechar..");
		 Console.ReadKey(true);
			
		}
	}
}
